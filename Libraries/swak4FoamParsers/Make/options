include $(MAKE_DIR)/../../rules/versionOptions

ifdef NEEDS_FILTER_DROPIN
ADDITIONALFILES_INC=-I../filesThatAreOnlyInSomeDistributions/OutputFilerDropin
endif

ifeq "$(WMAKE_NEW_CONVENTION)" "new"
  include $(MAKE_DIR)/mybisonNew
  include $(MAKE_DIR)/myflexNew
else
  include $(MAKE_DIR)/mybison
  include $(MAKE_DIR)/myflex

  sinclude $(MAKE_DIR)/mydependencies
endif

EXE_INC = -I$(MAKE_DIR) \
    $(FOAM_DEV_OPTION) 	\
    -I$(LIB_SRC)/finiteVolume/lnInclude \
    -I$(LIB_SRC)/surfMesh/lnInclude \
    -I$(LIB_SRC)/sampling/lnInclude \
    $(FILEFORMATS_INC) \
    $(TRISURFACE_INC) \
    -I$(LIB_SRC)/dynamicMesh/lnInclude \
    -I$(LIB_SRC)/lagrangian/basic/lnInclude \
    -I$(LIB_SRC)/surfMesh/lnInclude \
    -I$(LIB_SRC)/meshTools/lnInclude \
    $(ADDITIONALFILES_INC)

LIB_LIBS = -lfiniteVolume \
	-lsampling \
        -llagrangian \
	-ldynamicMesh \
	-lsurfMesh \
	-lmeshTools
